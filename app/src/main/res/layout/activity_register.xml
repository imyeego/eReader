<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.a16lao.wyh.ui.main.activity.RegisterActivity">

    <include layout="@layout/view_toolbar" />

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="60dp">

        <include
            android:id="@+id/view_register_phone"
            layout="@layout/view_login_simple" />

        <TextView
            android:id="@+id/text_register_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_btn"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/text_register_next"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_2" />
    </LinearLayout>


</LinearLayout>
