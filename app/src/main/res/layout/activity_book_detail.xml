<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/view_book_tool"
        layout="@layout/view_toolbar_no" />


    <LinearLayout
        android:id="@+id/view_book_detail"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/art_down" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:includeFontPadding="false"
                android:text="下载"
                android:textColor="@color/color_5"
                android:textSize="@dimen/font_5" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_book_read"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="阅读"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/det_add_ed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:includeFontPadding="false"
                android:text="已加书架"
                android:textColor="@color/color_7"
                android:textSize="@dimen/font_5" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@id/view_book_detail"
        android:background="#fceae3"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="开通会员，立享全场7折，打折书籍享折上折"
        android:textColor="@color/color_1"
        android:textSize="@dimen/font_4" />

    <ListView
        android:id="@+id/list_book_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_book_detail"
        android:layout_below="@id/view_book_tool"
        android:divider="@color/color_8"
        android:dividerHeight="10dp"
        android:paddingBottom="30dp"
        android:scrollbars="none" />


</RelativeLayout>