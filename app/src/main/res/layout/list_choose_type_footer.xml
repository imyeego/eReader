<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:layout_marginTop="18dp"
        android:background="@color/color_7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/text_pop_reset"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="21dp"
            android:layout_weight="1"
            android:background="@drawable/bg_c1_r2"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="重置"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_2" />

        <TextView
            android:id="@+id/text_pop_sure"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/border_c7_r2"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="确定"
            android:textColor="@color/color_4"
            android:textSize="@dimen/font_2" />
    </LinearLayout>
</LinearLayout>