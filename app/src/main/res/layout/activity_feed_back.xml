<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.a16lao.wyh.ui.mine.activity.FeedBackActivity">

    <include layout="@layout/view_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginLeft="@dimen/activity_both_space"
        android:layout_marginRight="@dimen/activity_both_space"
        android:layout_marginTop="10dp"
        android:background="@android:color/white">


        <EditText
            android:id="@+id/edit_feed_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="top|left"
            android:hint="@string/text_feed_back_hint"
            android:includeFontPadding="false"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:paddingBottom="12dp"
            android:textColor="@color/color_3"
            android:textColorHint="@color/color_5"
            android:textSize="@dimen/font_3" />


        <TextView
            android:id="@+id/text_feed_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:includeFontPadding="false"
            android:text="0/500"
            android:textColor="@color/color_5"
            android:textSize="@dimen/font_3" />
    </RelativeLayout>


</LinearLayout>
