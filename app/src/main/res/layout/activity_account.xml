<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.a16lao.wyh.ui.mine.activity.AccountActivity">

    <include layout="@layout/view_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="6514"
            android:textColor="@color/color_1"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:text="@string/text_account_balance"
            android:textColor="@color/color_4"
            android:textSize="@dimen/font_4" />

        <TextView
            android:id="@+id/text_account_recharge"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_c1_r6"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/text_account_recharge"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:background="@color/color_7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/view_book_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/book_buy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/text_book_buy"
                android:textColor="@color/color_3"
                android:textSize="@dimen/font_2" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/line_space"
            android:layout_height="match_parent"
            android:background="@color/color_7" />

        <LinearLayout
            android:id="@+id/view_reward_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/det_rew" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/text_reward_detail"
                android:textColor="@color/color_3"
                android:textSize="@dimen/font_2" />
        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:background="@color/color_7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/view_recharge_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/recharge_details" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/text_recharge_detail"
                android:textColor="@color/color_3"
                android:textSize="@dimen/font_2" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/line_space"
            android:layout_height="match_parent"
            android:background="@color/color_7" />

        <LinearLayout
            android:id="@+id/view_activity_gift"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/activity_gift" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/text_activity_gift"
                android:textColor="@color/color_3"
                android:textSize="@dimen/font_2" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
