<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="15dp">

    <RelativeLayout
        android:id="@+id/rl_line_1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-08-01"
            android:textColor="@color/color_4"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_date"
            android:text="18:56"
            android:textColor="@color/color_4"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete_2" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_line_1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="5dp"
        android:text="这是一项不朽的工作，是多年潜心研究和细致学术思索的成果，它不可能被本世纪任何有关明治天皇的书所取代，注定要成为所有想了解明治维新和现代日本形成的外国学生的必读书目。"
        android:textColor="@color/color_3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_content"
        android:background="@color/color_8"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tv_pre_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="评论短文"
            android:textColor="@color/color_4"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_essay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_pre_comment"
            android:layout_marginLeft="5dp"
            android:text="《我爱故乡的杨梅》"
            android:textColor="@color/color_2"
            android:textSize="16sp">


        </TextView>


    </RelativeLayout>

</RelativeLayout>