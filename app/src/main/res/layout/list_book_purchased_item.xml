<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="107dp">

    <ImageView
        android:id="@+id/img_book_cover"
        android:layout_width="60dp"
        android:layout_height="82.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_toRightOf="@id/img_book_cover"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/rl_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/color_3"
                android:textSize="@dimen/sp_16"
                android:text="道岳独尊"
                />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_line_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_line_1">

            <TextView
                android:id="@+id/tv_loading_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/color_4"
                android:textSize="@dimen/sp_14"
                android:text="连载中"
                />

            <TextView
                android:id="@+id/tv_book_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@id/tv_loading_state"
                android:text="言情"
                android:textColor="@color/color_1"

                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_line_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_read_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/color_6"
                android:textSize="@dimen/sp_12"
                android:text="连载中"
                />

        </RelativeLayout>



    </RelativeLayout>

    <TextView
        android:id="@+id/tv_add_shelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_2"
        android:text="加入书架"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        />

</RelativeLayout>