<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_search"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_both_space"
        android:paddingRight="@dimen/activity_both_space">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_c8_r3_border_c7"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:background="@drawable/search" />

            <EditText
                android:id="@+id/edit_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:text="穿越"
                android:imeOptions="actionSearch"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/color_6"
                android:textSize="@dimen/font_4" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_search_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_both_space"
            android:includeFontPadding="false"
            android:text="取消"
            android:textColor="@color/color_4"
            android:textSize="@dimen/font_4" />
    </LinearLayout>

    <View
        android:id="@+id/line_search"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="11dp"
        android:background="@color/color_7" />

    <LinearLayout
        android:id="@+id/view_search_result"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_both_space"
        android:paddingRight="@dimen/activity_both_space"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            app:srcCompat="@drawable/ic_arrow_left" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_c8_r3_border_c7"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:background="@drawable/search" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:text="穿越"
                android:imeOptions="actionSearch"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/color_6"
                android:textSize="@dimen/font_4" />

        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragment_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>