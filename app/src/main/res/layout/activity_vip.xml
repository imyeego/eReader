<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context="com.a16lao.wyh.ui.mine.activity.VipActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#650000ff"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/view_vip_tool"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/text_toolbar_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_1" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/image_toolbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:paddingLeft="12dp"
                    android:paddingRight="10dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_arrow_left_white" />


                <TextView
                    android:id="@+id/text_toolbar_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/text_title_open_record"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="210.5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/border_cw_r6"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/text_mine_login"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_2" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="25dp">

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/avatar">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/vip" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="少年不识愁滋味"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_1" />

                    <TextView
                        android:id="@+id/text_vip_validity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:includeFontPadding="false"
                        android:text="会员将于2019-06-15到期"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_4" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <GridView
            android:id="@+id/grid_vip_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:scrollbars="none"
            android:verticalSpacing="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:text="@string/text_recharge_payment"
            android:textColor="@color/color_3"
            android:textSize="@dimen/font_2"
            android:textStyle="bold" />

        <include
            android:id="@+id/view_vip_ali"
            layout="@layout/view_recharge_payment" />

        <include
            android:id="@+id/view_vip_wx"
            layout="@layout/view_recharge_payment" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/wyh_promotion" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:text="@string/text_vip_privilege_explain"
            android:textColor="@color/color_3"
            android:textSize="@dimen/font_2"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/view_vip_explain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/privilege" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:includeFontPadding="false"
                    android:text="@string/text_privilege_explain"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/font_2" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/line_space"
                android:layout_height="40dp"
                android:background="@color/color_7" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vip_plate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:includeFontPadding="false"
                    android:text="VIP会员专区"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/font_2" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_8" />

        <TextView
            android:id="@+id/text_vip_recharge"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/activity_both_space"
            android:layout_marginRight="@dimen/activity_both_space"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_c1_r6"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="去支付50元"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_2" />

    </LinearLayout>
</ScrollView>