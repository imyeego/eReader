<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="@dimen/line_space"
            android:layout_height="wrap_content"
            android:background="@color/color_7" />

        <TextView
            android:id="@+id/text_vip_op"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/activity_both_space"
            android:text="caozuo"
            android:textColor="@color/color_3"
            android:textSize="@dimen/font_3" />

        <View
            android:layout_width="@dimen/line_space"
            android:layout_height="wrap_content"
            android:background="@color/color_7" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_vip_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/authority_no" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/line_space"
            android:layout_height="wrap_content"
            android:background="@color/color_7" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon_vip_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list_selected" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/line_space"
            android:layout_height="wrap_content"
            android:background="@color/color_7" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space"
        android:layout_alignParentBottom="true"
        android:background="@color/color_7" />
</RelativeLayout>